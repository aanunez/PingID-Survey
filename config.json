{
    "name": "Survey Auth",
    "description": "Force all surveys on a project to require authorization to access. No project level configuration necessary.",
    "documentation": "README.md",
    "namespace": "Geisinger\\SurveyAuth",
    "authors": [
        {
            "name": "Adam Nunez",
            "email": "anunez3@geisinger.edu",
            "institution": "Geisinger Health"
        }
    ],
    "framework-version": 14,
    "system-settings": [
        {
            "key": "user-item",
            "name": "<b>Server Username Login Field</b><br>Name of the $_SERVER[X] variable with the authenticated username",
            "type": "textbox"
        },
        {
            "key": "grace",
            "name": "<b>Grace Time</b><br>Length of time that login is valid for in minutes",
            "type": "textbox"
        },
        {
            "key": "salt",
            "name": "Salt",
            "type": "textbox",
            "hidden": true
        },
        {
            "key": "pepper",
            "name": "Pepper",
            "type": "textbox",
            "hidden": true
        }
    ],
    "compatibility": {
        "redcap-version-min": "14.0.0"
    }
}